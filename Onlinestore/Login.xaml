<Window x:Class="OnlineStore.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="250" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100">
            <TextBlock Text="Логин:" />
            <TextBox Text="{Binding Username}"/>
            <TextBlock Text="Пароль:" />
            <TextBox Text="{Binding Password}"/>
            <Button Content="Войти" Margin="0,10,0,0" Click="LoginButton_Click" />

        </StackPanel>
    </Grid>
</Window>
